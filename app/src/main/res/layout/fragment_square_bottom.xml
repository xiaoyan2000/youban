<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="20px"
    android:layout_width="match_parent"
    android:layout_height="650px">

    <RelativeLayout
        android:layout_marginLeft="140px"
        android:layout_width="800px"
        android:layout_height="match_parent"
        android:background="@drawable/tem3">

        <ImageView
            android:id="@+id/image_square_person"
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginTop="100px"
            android:src="@drawable/tem1" />

        <LinearLayout
            android:layout_marginLeft="130px"
            android:layout_width="600px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="65px"

            >

            <TextView
                android:id="@+id/square_activety_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginVertical="30px"
                android:text="名称："
                android:textColor="@color/black"
                android:textSize="50px" />

            <TextView
                android:id="@+id/square_activety_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginVertical="30px"
                android:text="时间："
                android:textColor="@color/black"
                android:textSize="50px" />

            <TextView
                android:id="@+id/squareactivety_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginVertical="30px"
                android:text="地点："
                android:textColor="@color/black"
                android:textSize="50px" />

            <TextView
                android:id="@+id/square_activety_numbePersonr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50px"
                android:layout_marginVertical="30px"
                android:text="人数"
                android:textColor="@color/black"
                android:textSize="50px" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>