<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="185px"
    >
    <ImageView
        android:id="@+id/news_bottom_image"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50px"
        android:src="@drawable/tem1"/>
    <TextView
        android:id="@+id/news_bottom_name"
        android:layout_width="500px"
        android:layout_height="70px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40px"
        android:layout_marginLeft="220px"
        android:textSize="60px"
        android:text="name"
        />
    <TextView
        android:id="@+id/news_bottom_inf"
        android:layout_width="500px"
        android:layout_height="60px"
        android:textSize="40px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="120px"
        android:layout_marginLeft="220px"
        android:text="information"
        />
    <TextView
        android:id="@+id/news_bottom_time"
        android:layout_width="200px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60px"
        android:layout_centerVertical="true"
        android:text="time"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/tem3"/>
</RelativeLayout>